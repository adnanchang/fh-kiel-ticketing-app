@model FH_Kiel_Ticketing_App.Models.StudentUserViewModel

@{
    ViewBag.Title = "Profile Settings";
}

<h2>Edit</h2>

@{
    var semesterSeason = new List<SelectListItem>()
{
new SelectListItem() { Text = "Winter Semester - WS", Value = "WS"},
new SelectListItem() { Text = "Summer Semester - SS", Value = "SS"}
};
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Hey @Model.user.firstName, here you can edit your data</h4>
    <hr />

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    @Html.HiddenFor(model => model.student.recordID)
    @Html.HiddenFor(model => model.user.recordID)

    <div class="form-group">
        @Html.LabelFor(model => model.student.matrikelNumber, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.student.matrikelNumber, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.student.matrikelNumber, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.student.beginningSemesterSeason, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.student.beginningSemesterSeason, semesterSeason, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.student.beginningSemesterSeason, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.student.beginningSemesterYear, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.student.beginningSemesterYear, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.student.beginningSemesterYear, "", new { @class = "text-danger" })
        </div>
    </div>

    <hr />
    <h4>If you don't want us to bother you with email notifications</h4>
    <div class="form-group">
        @Html.LabelFor(model => model.user.emailNotification, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.user.emailNotification)
            @Html.ValidationMessageFor(model => model.user.emailNotification, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
