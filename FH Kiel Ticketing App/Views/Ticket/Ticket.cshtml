@model FH_Kiel_Ticketing_App.Models.StudentTicketViewModel

@{
    ViewBag.Title = "TicketView";
}


<style>
    .vertical-divider {
        border-right: 1px solid #DDD;
    }

    .project-chat ul {
        list-style: none;
        padding: 0;
    }

        .project-chat ul li {
            margin-bottom: 20px;
        }

        .project-chat ul .header {
            display: flow-root;
        }
        small {
        font-size: 10px;
        color: #ccc;
        }
        .right .sender-text {
            padding-right: 0;
        }
        .contributor {
            background-color: #2c3e50;
            padding: 10px;
            color: white;
            border-radius: 5px;
        }
        .font14{
            font-size:14px;
        }
    .sender {
        background-color: #F0F8FF;
        padding: 10px;
        border-radius: 10px;
    }
    .receiver {
        background-color: #E6E6FA;
        padding: 10px;
        border-radius: 10px;
    }
    .select-file {
        width: 120px;
        height: 35px;
        border-radius: 5px;
        padding: 4px;
        display: flex;
    }

    .select-file input {
        position: absolute;
        opacity: 0;
        display: block;
        width: 110px;
    }

    .select-file span {
        color: #18bc9c;
        margin-right: 5px;
    }
    .text-warning, .text-warning:hover {
        background-color: #f39c12;
        border-radius: 2px;
        padding: 2px 5px;
        color: #fff;
    }

    .text-success, .text-success:hover {
        background-color: #28a745;
        border-radius: 2px;
        padding: 2px 5px;
        color: #fff;
    }

    .text-danger, .text-danger:hover {
        background-color: #e74c3c;
        border-radius: 2px;
        padding: 2px 5px;
        color: #fff;
    }
    .comment-box {
        width: 100%;
        height: 70px;
    }
    .progress .progress-bar {
        height: 40px;
        font-size: 13px;
        vertical-align:middle;

        
    }
    .progress {
        height: 25px;
        text-align:center;
        vertical-align:middle;
        text-align:center;
        
    }
    .progress-bar{
        vertical-align:middle;
    }

    .bar {
        font-size: 30px;
        line-height: 40px;
    }
    .green{
        background-color:green;
    }
    
</style>
<div class="progress" style=" vertical-align:middle;" >
    <div class="progress-bar green " role="progressbar" style="width:15%;  ">
        Proposal Submitted
    </div>
    <div class="progress-bar justify-content-center" role="progressbar" style="width:20%; ">
        Articats decided
    </div>
    <div class="progress-bar" role="progressbar" style="width:50%; ">
        In progress
    </div>
    <div class="progress-bar" role="progressbar" style="width:15%; ">
        Project submitted
    </div>
</div>
<div class="row">
    <div class="col-lg-2 vertical-divider">
        <h5 class="contributor">Ticket Status</h5>
        <div class="row">
            <div class="col-lg-12">
                @if (Model.ticket.ticketStatus.ticketStatus == "Proposal Awaiting Approval")
                {
                    <p class="font14 text-warning">@Model.ticket.ticketStatus.ticketStatus</p>
                }
                @if (Model.ticket.ticketStatus.ticketStatus == "Proposal Approved")
                {
                    <p class="font14 text-success">@Model.ticket.ticketStatus.ticketStatus</p>
                }
                @if (Model.ticket.ticketStatus.ticketStatus == "Proposal Rjected")
                {
                    <p class="font14 text-danger">@Model.ticket.ticketStatus.ticketStatus</p>
                }
                @if (Model.ticket.ticketStatus.ticketStatus == "Proposal In Progress")
                {
                    <p class="font14 text-success">@Model.ticket.ticketStatus.ticketStatus</p>
                }
                @if (Model.ticket.ticketStatus.ticketStatus == "Completed Successfully")
                {
                    <p class="font14 text-success">@Model.ticket.ticketStatus.ticketStatus</p>
                    
                }
               @if(ViewBag.UserRole =="Supervisor"){
                    if (Model.ticket.ticketStatus.ticketStatus == "Proposal awaiting approval")
                    {
                        <p class="font14"><a href="/Ticket/ChangeStatus?status=@Model.ticket.ticketStatus.ticketStatus&id=@Model.ticket.recordID" type="submit"> Approve proposal</a></p>
                        <p class="font14"><a href="/Ticket/ChangeStatus?status=rejected&id=@Model.ticket.recordID" type="submit"> Reject Proposal</a></p>
                    }
                    if (Model.ticket.ticketStatus.ticketStatus == "Proposal Approved")
                    {
                        <p class="font14"><a href="/Ticket/ChangeStatus?status=inprogress&id=@Model.ticket.recordID" type="submit"> Change to In Progress</a></p>
                        <p class="font14"><a href="/Ticket/ChangeStatus?status=complete&id=@Model.ticket.recordID" type="submit"> Complete Successfully</a></p>
                    }
                    if (Model.ticket.ticketStatus.ticketStatus == "Proposal Rjected")
                    {
                        <p>Ticket CLosed</p>
                    }
                    if (Model.ticket.ticketStatus.ticketStatus == "Proposal In Progress")
                    {
                        <p class="font14"><a href="/Ticket/ChangeStatus?status=complete&id=@Model.ticket.recordID" type="submit"> Complete Successfully</a></p>
                    }
                     if (Model.ticket.ticketStatus.ticketStatus == "Completed Successfully")
                     {
                         <p>Ticket CLosed</p>
                     }
             }
            </div>

        </div>
        <hr />
        <h5 class="contributor">Ticket Type </h5>
        <p class="font14">@Model.ticket.tickettype</p>
        <hr />
        <h5 class="contributor">Contributors</h5>
        <table class="table table-striped table-hover font14">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Role </th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.contributorsName)
                {
                <tr>
                    <td>@item.lastName</td>
                    <td>@item.Role</td>


                </tr>

                }
                
            </tbody>
        </table>
        <a href="#">View history</a>
    </div>
    <div class="col-lg-8 vertical-divider">
        <h3>@Model.ticket.title</h3>
        <hr />
        <div class="project-chat">
            <ul class="chat">
                @foreach (var item in Model.comments)
    {




        if (Model.user.recordID == item.User.recordID)
        {
            <li class="right clearfix">
                <span class="col-lg-1 pull-right">

                    <img src="@(Url.Content("~") + item.User.recordID +".PNG")" height="50" width="50" alt="User Avatar" class="img-circle" />
                </span>
                <div class="col-lg-11 sender-text clearfix">
                    <p class="sender">
                        @Html.Raw(item.Content)
                     
                    </p>
                    <small class="pull-right">@item.CommentDate.ToShortDateString()</small>
                </div>
            </li>

    }
           else
            {
            <li class="left clearfix">
                <span class="pull-left col-lg-1">
                    <img src="@(Url.Content("~") + item.User.recordID +".PNG")" height="50" width="50" alt="User Avatar" class="img-circle" />
                </span>
                <div class="col-lg-11 clearfix">
                    <p class="receiver">
                        @Html.Raw(item.Content)

                    </p>
                    <small>@item.CommentDate.ToLocalTime()</small>
                </div>
            </li>
        }
}




            </ul>
            <div class="col-lg-12" style="margin-top:30px">
                
                    @using (Html.BeginForm("PostComment", "Ticket", FormMethod.Post))
    {
                @Html.HiddenFor(model => model.user.recordID)
                @Html.HiddenFor(model => model.ticket.recordID)

                @Html.TextBoxFor(m => Model.theComment.Content, new { htmlAttributes = new { @class = "form-control col-lg-10 comment-box pull-left" } , style = " min-width: 100%; height: 70px;" })
                
                        <div class="form-group pull-right">
                    <div class="col-lg-2">
                        <input type="submit" value="submit" class="btn btn-primary" style="margin-top:10px;"/>
                    </div>
                </div>
}
                </div>
            </div>
    </div>
    <div class="col-lg-2">

        <h5 class="contributor">Files</h5>

        


        @using (Html.BeginForm("UploadFile", "Ticket", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.HiddenFor(model => model.user.recordID)
        @Html.HiddenFor(model => model.ticket.recordID)

        <div class="select-file">
            <span class="glyphicon glyphicon-upload"></span>
            <span class="hidden-xs">Upload New</span>
            <input type="file" name="file" />
        </div>
        
        <input type="submit" value="Upload" />
}
        <hr />
        <div class="row">
            <div class="col-lg-4">
                <img style="width: 120%;" src="@Url.Content("~/pdficon.jpg")" />
                <a href="/Proposal/ExportPDF/@Model.proposal.recordID">Download Proposal</a>
                @foreach (FileInfo file in @Model.files)
            {
                <img style="width: 120%;" src="@Url.Content("~/pdficon.jpg")" />
                <a href="/Ticket/DownloadPDF?filename=@file">@file</a>
        }
            </div>
        </div>
        <hr />
    </div>
</div>




