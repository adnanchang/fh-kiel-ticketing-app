@model FH_Kiel_Ticketing_App.Models.ProposalUserViewModel

@{
    ViewBag.Title = "Index";
}
<h2>Index</h2>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Something good
        </th>
        <th>Download PDF</th>
        <th></th>
    </tr>
    @foreach (var item in Model.proposals)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nameOfProject)
            </td>
            <td>
                <a href="/Proposal/ExportPDF/@item.recordID">Download PDF</a>
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.recordID }) |
                @Html.ActionLink("Details", "Details", new { id = item.recordID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.recordID })
            </td>
        </tr>
    }
</table>